@page
@model InventoryManagmentPPM.Pages.Inventory.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
  <p>
    <h4>Filter String:</h4> 
    <input type="text" asp-for="SearchString" />
    <h4>Filter by:</h4>
    Name: <input type="checkbox" name="CheckboxFilterName" asp-for="CheckboxFilterName" />
    PPM Code: <input type="checkbox" name="CheckboxFilterPpmCode" asp-for="CheckboxFilterPpmCode" />
    Client: <input type="checkbox" name="CheckboxFilterClient" asp-for="CheckboxFilterClient" />
    Site Code: <input type="checkbox" name="CheckboxFilterSiteCode" asp-for="CheckboxFilterSiteCode" />
    Quantity: <input type="checkbox" name="CheckboxFilterQuantity" asp-for="CheckboxFilterQuantity" />
    Comment: <input type="checkbox" name="CheckboxFilterComment" asp-for="CheckboxFilterComment" />
    <input type="submit" value="Filter" />
  </p>
</form>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].PpmCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].SiteCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Bay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InventoryItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PpmCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
