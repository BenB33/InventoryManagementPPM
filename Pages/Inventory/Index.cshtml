@page
@model InventoryManagmentPPM.Pages.Inventory.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div style="width: 74%; float: left;">
<form>
  <p>
    <h4>Filter String:</h4>
    <input type="text" asp-for="SearchString" class="form-control" placeholder="Search" aria-label="Search"><br />
    <input type="submit" value="Filter" />
    <script>
      function ToggleFiltersVisible() {
      const box = document.getElementById('IdDivFilterBy');
      const btn = document.getElementById('IdButtonToggleFiltersVisible');
        if (box.style.display === 'none') {
          box.style.display = 'block';
          btn.textContent = 'Hide Filters';
        } else {
          box.style.display = 'none';
          btn.textContent = 'Show Filters';
        }
      };
    </script>
    <button id="IdButtonToggleFiltersVisible" onclick="ToggleFiltersVisible(); return false;">Show Filters</button>
    
    <div id="IdDivFilterBy" style="display:none;">
    <h4>Filter by:</h4>
    <table>
      <tr><th>Name</th><td><input type="checkbox" name="CheckboxFilterName" asp-for="CheckboxFilterName" /></td></tr>
      <tr><th>PPM Code</th><td><input type="checkbox" name="CheckboxFilterPpmCode" asp-for="CheckboxFilterPpmCode" /></td></tr>
      <tr><th>Client</th><td><input type="checkbox" name="CheckboxFilterClient" asp-for="CheckboxFilterClient" /></td></tr>
      <tr><th>Site Code</th><td><input type="checkbox" name="CheckboxFilterSiteCode" asp-for="CheckboxFilterSiteCode" /></td></tr>
      <tr><th>Bay</th><td><input type="checkbox" name="CheckboxFilterBay" asp-for="CheckboxFilterBay" /></td></tr>
      <tr><th>Quantity</th><td><input type="checkbox" name="CheckboxFilterQuantity" asp-for="CheckboxFilterQuantity" /></td></tr>
      <tr><th>Comment</th><td><input type="checkbox" name="CheckboxFilterComment" asp-for="CheckboxFilterComment" /></td></tr>
    </table>
    </div>

  </p>
</form>
</div>

<div style="width: 25%; float: right;">
  <a asp-page="Create" style="float: right;">Create New</a>
</div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].PpmCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].SiteCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Bay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InventoryItem) {
        <tr>
            <td>
              <img src="@("~/images/"+item.ImageName)" asp-append-version="true" width="200px" height="200px" style="object-fit: cover;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PpmCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
